<android:android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="165dp"
    android:layout_height="280dp"
    android:padding="12dp"
    android:layout_margin="10dp"
    android:layout_marginRight="10dp"
    android:text="@android:color/black"
    card_view:cardCornerRadius="2dp"
    background="@color/viewBg"
    layout_width="165dp" layout_height="280dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/car_image" />

    <TextView
    android:id="@+id/car_name"
    android:textColor="#00427E"
    android:background="@color/viewBg"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/car_make"
        android:textColor="#00427E"
        android:background="@color/viewBg"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/car_price"
        android:textColor="#00427E"
        android:background="@color/viewBg"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content" />
</LinearLayout>

</android:android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/standard_margin"
    android:layout_gravity="center"
    android:orientation="vertical">


    <android:android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cards"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="2dp"
        android:text="@android:color/black"
        card_view:cardCornerRadius="2dp"
        background="@color/viewBg"
        layout_width="match_parent" layout_height="wrap_content">

    <ListView
        android:id="@+id/history_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:visibility="gone"/>

    </android:android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_no_transaction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="visible"
        android:text="No Transactions To Display"/>
</LinearLayout>